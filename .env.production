# Production Environment Configuration
# This file serves as a template for production deployments
# Never commit actual production secrets to version control

# Application Configuration
NODE_ENV=production
PORT=8080

# API Configuration
API_PREFIX=api
API_VERSION=v1

# Logging Configuration
# In production, use minimal logging for performance
LOG_LEVEL=info

# CORS Configuration
# In production, specify exact allowed origins
CORS_ORIGIN=https://yourdomain.com

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Deployment Configuration
DEPLOYMENT_ENV=production
APP_VERSION=0.0.1

# Production Optimizations
# Disable source maps in production for security
GENERATE_SOURCEMAP=false

# Hot Module Replacement (disabled in production)
HMR_ENABLED=false

# Debug Mode (disabled in production)
DEBUG=false

# API Documentation (Swagger/OpenAPI)
# Disable Swagger documentation in production for security
SWAGGER_ENABLED=false
API_BASE_URL=https://yourdomain.com
SUPPORT_EMAIL=support@example.com

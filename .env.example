# Application Configuration
NODE_ENV=development
PORT=3000

# API Configuration
API_PREFIX=api
API_VERSION=v1

# Logging
LOG_LEVEL=debug

# Production Configuration (for deployment)
# NODE_ENV=production
# PORT=8080
# LOG_LEVEL=info

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# Deployment Configuration
DEPLOYMENT_ENV=local
APP_VERSION=0.0.1

# API Documentation (Swagger/OpenAPI)
# Enable Swagger documentation (automatically enabled in development and staging)
SWAGGER_ENABLED=true
SWAGGER_TITLE=Calculator API
SWAGGER_DESCRIPTION=A NestJS-based REST API calculator application
SWAGGER_PATH=api
API_BASE_URL=http://localhost:3000
SUPPORT_EMAIL=support@example.com
